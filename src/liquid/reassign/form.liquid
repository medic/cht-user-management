<div class="is-flex is-flex-direction-column is-align-items-center">
  <form
    hx-post="/reassign"
    autocomplete="off"
    style="width: 38rem;"
  >
    <div>
      <h3 class="is-size-4">Reassign {{ contactType.friendly }}</h3>
    </div>
    <p>{{ contactType.friendly }}</p>
    <input name="place_type" value="{{contactType.name}}" hidden>

    <div class="p-2">
      <div>
        {% for hierarchy in hierarchy %}
          {% render 'components/search_input.html',
            type: contactType.name,
            hierarchy: hierarchy,
            prefix: 'hierarchy_',
            data: data
          %}
        {% endfor %}
      </div>
    </div>

    <div class="p-2 mt-4 mb-2" style="border-left: thick solid blue;">
      <p>
        Search for the {{ contactType.contact_friendly }} on
        <a
          href="https://{{session.authInfo.domain}}/#/contacts"
          target="_blank"
          rel="noopener noreferrer"
        >
          https://{{ session.authInfo.domain -}}
        </a>
        then copy their link and paste it below.
      </p>
    </div>
    <p><strong>Assign to</strong></p>
    <div class="p-2">
      <div class="field">
        <label class="label">Link to {{ contactType.contact_friendly }}</label>
        <div class="control">
          <textarea
            name="contact"
            type="text"
            class="textarea"
            rows="3"
            {% if data.contact %}
              value="{{data.contact}}"
            {% endif %}
            placeholder="https://{{session.authInfo.domain}}/#/contacts/19634c6118f13e43f685301e240036bc"
          ></textarea>
          {% if errors.contact -%}
            <p style="color: red;">{{ errors.contact }}</p>
          {% endif %}
        </div>
      </div>
    </div>

    {% if errors.form %}
      <div class="mt-2">
        <p class="has-text-weight-medium" style="color: red; font-size: 0.9rem;">{{ errors.form }}</p>
      </div>
    {% endif %}

    <div class="field is-grouped is-grouped-right mt-4">
      <div class="control">
        <a href="/" class="button is-small">Cancel</a>
        <button class="button is-small is-link">Reassign</button>
      </div>
    </div>
  </form>
</div>